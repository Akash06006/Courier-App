<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.courierdriver.common.BindingUtils" />

        <variable
            name="docVerifyViewModel"
            type="com.courierdriver.viewmodels.DocVerifyViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        app:hideKeyBoardOnClick="@{`back` }">

        <include
            android:id="@+id/toolbarCommon"
            layout="@layout/common_toolbar_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:onClick="@{(v) -> docVerifyViewModel.clickListener(v)}"
            android:visibility="visible" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/ic_top_circle">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/dp_5">

                <TextView
                    android:id="@+id/proof_address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/proof_of_address"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    app:font="@{`bold`}"
                    tools:ignore="AllCaps" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_aadhar_front"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/proof_address_tv"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_5"
                    android:onClick="@{(v) -> docVerifyViewModel.clickListener(v)}"
                    app:cardCornerRadius="@dimen/dp_10"
                    app:cardElevation="@dimen/dp_2">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/front_adahar_iv"
                        android:layout_width="150dp"
                        android:layout_height="160dp"
                        android:scaleType="centerCrop"
                        app:riv_corner_radius_bottom_left="@dimen/dp_10"
                        app:riv_corner_radius_bottom_right="@dimen/dp_10"
                        app:riv_corner_radius_top_left="@dimen/dp_10"
                        app:riv_corner_radius_top_right="@dimen/dp_10" />

                    <LinearLayout
                        android:id="@+id/ll_front_aadhar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/add_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_2"
                            android:text="@string/front" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_adadhr_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/proof_address_tv"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_20"
                    android:onClick="@{(v) -> docVerifyViewModel.clickListener(v)}"
                    app:cardCornerRadius="@dimen/dp_10"
                    app:cardElevation="@dimen/dp_2">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/back_adahar_iv"
                        android:layout_width="150dp"
                        android:layout_height="160dp"
                        android:scaleType="centerCrop"
                        app:riv_corner_radius_bottom_left="@dimen/dp_10"
                        app:riv_corner_radius_bottom_right="@dimen/dp_10"
                        app:riv_corner_radius_top_left="@dimen/dp_10"
                        app:riv_corner_radius_top_right="@dimen/dp_10" />

                    <LinearLayout
                        android:id="@+id/ll_back_aadhar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/add_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_2"
                            android:text="@string/back" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/pan_card_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cv_adadhr_back"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/pan_card"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    app:font="@{`bold`}"
                    tools:ignore="AllCaps" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_pan_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pan_card_tv"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_20"
                    android:onClick="@{(v) -> docVerifyViewModel.clickListener(v)}"
                    app:cardCornerRadius="@dimen/dp_10"
                    app:cardElevation="@dimen/dp_2">


                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/pan_card_iv"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:scaleType="centerCrop"
                        app:riv_corner_radius_bottom_left="@dimen/dp_10"
                        app:riv_corner_radius_bottom_right="@dimen/dp_10"
                        app:riv_corner_radius_top_left="@dimen/dp_10"
                        app:riv_corner_radius_top_right="@dimen/dp_10" />

                    <LinearLayout
                        android:id="@+id/ll_pan_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/add_icon" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/vehicle_info__tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cv_pan_card"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/vehicle_informatio"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    app:font="@{`bold`}"
                    tools:ignore="AllCaps" />

                <Spinner
                    android:id="@+id/sp_transport"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_below="@+id/vehicle_info__tv"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="20dp" />

                <View
                    android:id="@+id/view_transport"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/sp_transport"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/colorGreyLight" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/license_no_tf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_transport"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:hint="@string/driving_license_no"
                    android:textColorHint="@color/colorGrey">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_driving_license_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLength="30"
                        android:singleLine="true"
                        android:textColor="@color/colorblack"
                        android:textColorHint="@color/colorGrey"
                        android:textSize="14sp"
                        app:font="@{`regular`}"
                        tools:ignore="MissingConstraints" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/driver_license_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/license_no_tf"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/driver_license_photo"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    app:font="@{`bold`}"
                    tools:ignore="AllCaps" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_driving_front"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/driver_license_photo"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_5"
                    android:onClick="@{(v) -> docVerifyViewModel.clickListener(v)}"
                    app:cardCornerRadius="@dimen/dp_10"
                    app:cardElevation="@dimen/dp_2">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/front_driving_iv"
                        android:layout_width="150dp"
                        android:layout_height="160dp"
                        android:scaleType="centerCrop"
                        app:riv_corner_radius_bottom_left="@dimen/dp_10"
                        app:riv_corner_radius_bottom_right="@dimen/dp_10"
                        app:riv_corner_radius_top_left="@dimen/dp_10"
                        app:riv_corner_radius_top_right="@dimen/dp_10" />

                    <LinearLayout
                        android:id="@+id/ll_front_driving"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/add_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_2"
                            android:text="@string/front" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_driving_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/driver_license_photo"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_20"
                    android:onClick="@{(v) -> docVerifyViewModel.clickListener(v)}"
                    app:cardCornerRadius="@dimen/dp_10"
                    app:cardElevation="@dimen/dp_2">


                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/back_driving_iv"
                        android:layout_width="150dp"
                        android:layout_height="160dp"
                        android:scaleType="centerCrop"
                        app:riv_corner_radius_bottom_left="@dimen/dp_10"
                        app:riv_corner_radius_bottom_right="@dimen/dp_10"
                        app:riv_corner_radius_top_left="@dimen/dp_10"
                        app:riv_corner_radius_top_right="@dimen/dp_10" />

                    <LinearLayout
                        android:id="@+id/ll_back_driving"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/add_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_2"
                            android:text="@string/back" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_payment_options"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cv_driving_back"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="Payment Options"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    app:font="@{`bold`}"
                    tools:ignore="AllCaps" />

                <LinearLayout
                    android:id="@+id/lin_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_payment_options"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_20">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:backgroundTint="@color/colorWhite"
                        app:cardCornerRadius="@dimen/dp_30"
                        app:cardElevation="@dimen/dp_5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/dp_10">

                            <RelativeLayout
                                android:id="@+id/rel_paytm"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_marginRight="@dimen/dp_20"
                                android:onClick="@{(v) -> docVerifyViewModel.clickListener(v)}"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/ic_paytm" />

                                <ImageView
                                    android:id="@+id/img_arrow_paytm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/ic_small_arrow_down" />
                            </RelativeLayout>

                            <LinearLayout
                                android:id="@+id/lin_paytm"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_1"
                                    android:background="@color/colorGreyLight" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:layout_marginRight="@dimen/dp_20"
                                    android:text="@string/number"
                                    android:textColor="@color/colorGrey"
                                    android:textSize="@dimen/sp_14"
                                    app:font="@{`regular`}" />

                                <EditText
                                    android:id="@+id/et_phone_paytm"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:layout_marginRight="@dimen/dp_20"
                                    android:background="@drawable/shape_round_color_primary"
                                    android:inputType="phone"
                                    android:paddingLeft="@dimen/dp_20"
                                    android:paddingTop="@dimen/dp_10"
                                    android:paddingRight="@dimen/dp_20"
                                    android:paddingBottom="@dimen/dp_10"
                                    android:singleLine="true"
                                    android:maxLength="13"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/sp_16" />

                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:backgroundTint="@color/colorWhite"
                        app:cardCornerRadius="@dimen/dp_30"
                        app:cardElevation="@dimen/dp_5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/dp_10">

                            <RelativeLayout
                                android:id="@+id/rel_google_pay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_marginRight="@dimen/dp_20"
                                android:onClick="@{(v) -> docVerifyViewModel.clickListener(v)}"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/ic_google_pay" />

                                <ImageView
                                    android:id="@+id/img_arrow_google_pay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/ic_small_arrow_down" />
                            </RelativeLayout>

                            <LinearLayout
                                android:id="@+id/lin_google_pay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_1"
                                    android:background="@color/colorGreyLight" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:layout_marginRight="@dimen/dp_20"
                                    android:text="@string/number"
                                    android:textColor="@color/colorGrey"
                                    android:textSize="@dimen/sp_14"
                                    app:font="@{`regular`}" />

                                <EditText
                                    android:id="@+id/et_phone_google_pay"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:layout_marginRight="@dimen/dp_20"
                                    android:background="@drawable/shape_round_color_primary"
                                    android:inputType="phone"
                                    android:paddingLeft="@dimen/dp_20"
                                    android:paddingTop="@dimen/dp_10"
                                    android:paddingRight="@dimen/dp_20"
                                    android:paddingBottom="@dimen/dp_10"
                                    android:singleLine="true"
                                    android:maxLength="13"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/sp_16" />

                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:backgroundTint="@color/colorWhite"
                        app:cardCornerRadius="@dimen/dp_30"
                        app:cardElevation="@dimen/dp_5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/dp_10">

                            <RelativeLayout
                                android:id="@+id/rel_phone_pe"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_marginRight="@dimen/dp_20"
                                android:onClick="@{(v) -> docVerifyViewModel.clickListener(v)}"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/ic_phone_pe" />

                                <ImageView
                                    android:id="@+id/img_arrow_phone_pe"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/ic_small_arrow_down" />
                            </RelativeLayout>

                            <LinearLayout
                                android:id="@+id/lin_phone_pe"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_1"
                                    android:background="@color/colorGreyLight" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:layout_marginRight="@dimen/dp_20"
                                    android:text="@string/number"
                                    android:textColor="@color/colorGrey"
                                    android:textSize="@dimen/sp_14"
                                    app:font="@{`regular`}" />

                                <EditText
                                    android:id="@+id/et_phone_phone_pe"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:layout_marginRight="@dimen/dp_20"
                                    android:background="@drawable/shape_round_color_primary"
                                    android:inputType="phone"
                                    android:paddingLeft="@dimen/dp_20"
                                    android:paddingTop="@dimen/dp_10"
                                    android:paddingRight="@dimen/dp_20"
                                    android:paddingBottom="@dimen/dp_10"
                                    android:singleLine="true"
                                    android:maxLength="13"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/sp_16" />

                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin_pay"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_25"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_25"
                    android:background="@drawable/shape_button_back"
                    android:onClick="@{(v) -> docVerifyViewModel.clickListener(v)}"
                    android:text="@string/done"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/button_text_size"
                    app:font="@{`regular`}" />

            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

</layout>