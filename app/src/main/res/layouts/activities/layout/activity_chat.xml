<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.courierdriver.common.BindingUtils" />

        <variable
            name="viewModel"
            type="com.courierdriver.viewmodels.NotificationViewModel" />

        <variable
            name="model"
            type="com.courierdriver.model.NotificationListModel.Body" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbarCommon"
            layout="@layout/common_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:visibility="visible" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_order_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            app:cardCornerRadius="@dimen/dp_20"
            app:cardElevation="@dimen/dp_5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/dp_15">

                <TextView
                    android:id="@+id/tv_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/img_notification"
                    android:paddingRight="@dimen/dp_5"
                    android:text="@{model.notificationDescription.toString()}"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_14"
                    app:font="@{`regular`}" />

                <ImageView
                    android:id="@+id/img_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_notification_chat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_message"
                    android:layout_alignParentRight="true"
                    android:paddingTop="@dimen/dp_5"
                    android:text="@{model.createdAt!=null?BindingUtils.covertTimeAgoToText(model.createdAt):@string/todo}"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/sp_12"
                    app:font="@{`regular`}" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            app:cardCornerRadius="@dimen/dp_20"
            app:cardElevation="@dimen/dp_5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_attachement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:src="@drawable/ic_attachement" />


                <EditText
                    android:id="@+id/et_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/img_attachement"
                    android:background="@null"
                    android:hint="Enter"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_20"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_15"
                    android:layout_toLeftOf="@+id/rel_send"
                    app:font="@{`regular`}" />

                <RelativeLayout
                    android:id="@+id/rel_send"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_40"
                    android:layout_alignTop="@id/et_message"
                    android:layout_alignBottom="@id/et_message"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:background="@drawable/shape_round_corner"
                    android:backgroundTint="@color/colorPrimary"
                    android:padding="@dimen/dp_5">

                    <ImageView
                        android:id="@+id/img_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_send_chat" />
                </RelativeLayout>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>