<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

        <androidx.cardview.widget.CardView
                android:id="@+id/cv_gallery_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/round_layout"
                android:elevation="@dimen/dp_10"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                <TextView
                        android:id="@+id/tv_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/dp_10"
                        android:text="₹0 for cancellation"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_16"
                        app:font="@{`semibold`}" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="@dimen/dp_10"
                        android:text="The courier is on the way! A fine will be charged for cancelling the order. The cancellation charges will be adjusted in your next order or from the balance."
                        android:textColor="@color/colorGrey1"
                        android:textSize="@dimen/sp_12"
                        app:font="@{`regular`}" />

                <TextView
                        android:id="@+id/tv_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="end"
                        android:padding="@dimen/dp_10"
                        android:text="Cancel order with a fee of ₹0"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp_14"
                        app:font="@{`bold`}" />

                <TextView
                        android:id="@+id/tv_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="end"
                        android:padding="@dimen/dp_10"
                        android:text="Back"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_14"
                        app:font="@{`bold`}" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>
