<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.courierdriver.common.BindingUtils" />


        <variable
            name="onClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="viewModel"
            type="com.courierdriver.viewmodels.NotificationViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbarCommon"
            layout="@layout/common_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:visibility="visible"
            app:onClick="@{(v) -> viewModel.clickListener(v)}" />

        <LinearLayout
            android:id="@+id/lin_tabs_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/ic_top_circle"
            android:backgroundTint="@color/colorWhite">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_items"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_no_record"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:gravity="center"
                android:text="@string/no_record_found"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_18"
                android:visibility="gone"
                app:font="@{`semibold`}" />

        </LinearLayout>
    </LinearLayout>
</layout>
