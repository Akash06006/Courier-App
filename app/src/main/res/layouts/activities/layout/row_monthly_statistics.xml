<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.courierdriver.common.BindingUtils" />
        <variable
            name="model"
            type="com.courierdriver.model.StatisticsModel.Body.Year" />

        <variable
            name="currencySign"
            type="String" />
    </data>

    <LinearLayout
        android:id="@+id/lin_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorGreyLight" />

        <LinearLayout
            android:id="@+id/lin_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="0.5"
                android:text="@{model.month}"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_14"
                app:font="@{`bold`}" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Completed"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/sp_12"
                    app:font="@{`regular`}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@{model.completedOrders}"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_14"
                    app:font="@{`bold`}" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Earnings"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/sp_12"
                    app:font="@{`regular`}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@{currencySign+BindingUtils.setDecimalText(model.myIncome)}"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_14"
                    app:font="@{`bold`}" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Penalty"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/sp_12"
                    app:font="@{`regular`}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@{currencySign+model.penalty}"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_14"
                    app:font="@{`bold`}" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</layout>