<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.courierdriver.common.BindingUtils" />

        <variable
            name="loginViewModel"
            type="com.courierdriver.viewmodels.LoginViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLiteWhite"
        android:orientation="vertical"
        app:hideKeyBoardOnClick="@{`back` }">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rel_image"
            android:layout_alignBottom="@+id/rel_image"
            android:background="@drawable/ic_bottom_circle"
            android:backgroundTint="@color/colorPrimary">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_80"
            android:paddingBottom="@dimen/dp_100">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_app_icon_splash"
                android:textColor="@color/colorWhite" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel_image"
            android:layout_marginTop="-60dp"
            android:paddingBottom="@dimen/dp_20"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/ic_top_bottom_circle"
                android:backgroundTint="@color/colorWhite"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="@string/log_in"
                        android:textAllCaps="false"
                        android:textColor="@color/colorTextBlue"
                        android:textSize="@dimen/dimen_24sp"
                        android:textStyle="bold"
                        app:font="@{`bold`}"
                        tools:ignore="AllCaps" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/edtEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="@dimen/dp_30"
                            android:layout_marginRight="10dp"
                            android:hint="@string/email"
                            android:imeOptions="actionNext"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="15dp"
                            android:singleLine="true"
                            android:textSize="@dimen/sp_14"
                            app:font="@{`regular`}" />

                        <EditText
                            android:id="@+id/edtPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:hint="@string/password"
                            android:imeOptions="actionDone"
                            android:inputType="textPassword"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="15dp"
                            android:singleLine="true"
                            android:textSize="@dimen/sp_14"
                            app:font="@{`regular`}" />

                        <TextView
                            android:id="@+id/txtForgot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginRight="10dp"
                            android:onClick="@{(v) -> loginViewModel.clickListener(v)}"
                            android:text="@string/forgot_password"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimary"
                            app:font="@{`regular`}"
                            tools:ignore="AllCaps" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginRight="@dimen/dp_20"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/lin_ccp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.hbb20.CountryCodePicker
                                android:id="@+id/bt_country_code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                app:ccpDialog_showNameCode="false"
                                app:ccp_arrowSize="@dimen/dp_20"
                                app:ccp_clickable="true"
                                app:ccp_contentColor="@color/colorBlack"
                                app:ccp_defaultPhoneCode="91"
                                app:ccp_showFlag="false"
                                app:ccp_showNameCode="false"
                                app:ccp_showPhoneCode="true"
                                app:ccp_textSize="@dimen/sp_14" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/edtPhone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@null"
                            android:digits="0123456789"
                            android:hint="@string/phone_number"
                            android:imeOptions="actionDone"
                            android:inputType="phone"
                            android:singleLine="true"
                            android:textSize="@dimen/sp_14"
                            app:font="@{`regular`}" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@color/colorGreyLight" />

                    <Button
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/shape_button_back"
                        android:onClick="@{(v) -> loginViewModel.clickListener(v)}"
                        android:text="@string/send_otp"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/button_text_size"
                        app:font="@{`regular`}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_25"
                        android:text="@string/or_login_with"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_14"
                        app:font="@{`regular`}"
                        tools:ignore="AllCaps" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_5"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/google_login"
                            android:layout_width="@dimen/dp_70"
                            android:layout_height="@dimen/dp_70"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_5"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/shape_round_corner"
                            android:backgroundTint="@color/colorWhite3"
                            android:elevation="2dp"
                            android:onClick="@{(v) -> loginViewModel.clickListener(v)}">
                            <!-- -->
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_margin="@dimen/dp_15"
                                android:src="@drawable/ic_google" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/fbLogin"
                            android:layout_width="@dimen/dp_70"
                            android:layout_height="@dimen/dp_70"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/shape_round_corner"
                            android:backgroundTint="@color/colorWhite3"
                            android:elevation="2dp"
                            android:onClick="@{(v) -> loginViewModel.clickListener(v)}">
                            <!-- android:elevation="5dp"-->
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_margin="@dimen/dp_15"
                                android:src="@drawable/ic_facebook" />

                        </RelativeLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_35"
                        android:text="@string/new_user"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_14"
                        app:font="@{`regular`}"
                        tools:ignore="AllCaps" />

                    <Button
                        android:id="@+id/txtSignup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:background="@drawable/shape_button_back"
                        android:onClick="@{(v) -> loginViewModel.clickListener(v)}"
                        android:paddingLeft="@dimen/dp_50"
                        android:paddingRight="@dimen/dp_50"
                        android:text="@string/register"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/button_text_size"
                        app:font="@{`regular`}" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_40"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="2dp"
                            android:text="@string/dont_have_account"
                            android:textAllCaps="false"
                            app:font="@{`regular`}"
                            tools:ignore="AllCaps" />

                        <TextView
                            android:id="@+id/txtSignup_"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:onClick="@{(v) -> loginViewModel.clickListener(v)}"
                            android:text="@string/signup"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:font="@{`bold`}"
                            tools:ignore="AllCaps" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/tv_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_25"
            android:text="@string/log_in"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_20"
            android:visibility="gone"
            app:font="@{`regular`}"
            tools:ignore="AllCaps" />

        <View
            android:id="@+id/v_underemail"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/colorWhite2"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/round_back_transparent"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_15"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_15"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/ll_setting_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_setting_email"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10"
                android:visibility="gone">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/btn_ccp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:padding="@dimen/dp_2"
                    app:ccp_arrowSize="@dimen/dp_20"
                    app:ccp_clickable="true"
                    app:ccp_contentColor="@color/colorBlack2"
                    app:ccp_defaultPhoneCode="52"
                    app:ccp_showFlag="true"
                    app:ccp_showPhoneCode="true"
                    app:ccp_textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/et_phone_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:hint="@string/phone_number"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_5"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/sp_14"
                    app:font="@{`regular`}" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_35"
            android:background="@drawable/round_layout"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_arrow_forward"
            android:textColor="@color/colorWhite"
            android:visibility="gone" />
        <!-- android:onClick="@{(v) -> loginViewModel.clickListener(v,etEmail.getText().toString(), etPassword.getText().toString())}"-->
    </RelativeLayout>

</layout>