<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.courierdriver.viewmodels.profile.ProfileViewModel" />

        <variable
            name="model"
            type="com.courierdriver.model.profile.ProfileDetailsModel.Body" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_top_circle"
        android:backgroundTint="@color/colorTextBlue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_profile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@{model.image!=null ?  model.image.toString():@string/todo,default=@drawable/ic_user}"
                    app:civ_border_color="@color/colorLightPink"
                    app:civ_border_width="@dimen/dp_2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/img_profile"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:text="@{model.userName}"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_16"
                        app:font="@{`bold`}" />

                    <TextView
                        android:id="@+id/tv_phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_10"
                        android:drawableLeft="@drawable/ic_call"
                        android:drawablePadding="@dimen/dp_5"
                        android:text="@{model.phoneNumber.toString()}"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_12"
                        app:font="@{`regular`}" />

                    <TextView
                        android:id="@+id/tv_sign_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:onClick="@{(v) -> viewModel.clickListener(v)}"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:text="Sign Out"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_14"
                        app:font="@{`semibold`}" />


                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lin_tabs_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_top_circle"
                android:backgroundTint="@color/colorWhite"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/dp_20"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_100"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:elevation="@dimen/dp_10"
                        android:orientation="vertical"
                        app:cardCornerRadius="@dimen/dp_20">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_20"
                                android:layout_marginRight="@dimen/dp_10"
                                android:text="@{model.totalOrders}"
                                android:textAlignment="center"
                                android:textColor="@color/colorTextBlue"
                                android:textSize="@dimen/sp_16"
                                app:font="@{`bold`}" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_20"
                                android:layout_marginRight="@dimen/dp_10"
                                android:text="Completed Orders"
                                android:textAlignment="center"
                                android:textColor="@color/colorGrey"
                                android:textSize="@dimen/dp_12"
                                app:font="@{`regular`}" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_100"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:elevation="@dimen/dp_10"
                        android:orientation="vertical"
                        app:cardCornerRadius="@dimen/dp_20">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_20"
                                android:layout_marginRight="@dimen/dp_10"
                                android:text="@{model.avgRating}"
                                android:textAlignment="center"
                                android:textColor="@color/colorTextBlue"
                                android:textSize="@dimen/sp_16"
                                app:font="@{`bold`}" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_20"
                                android:layout_marginRight="@dimen/dp_10"
                                android:text="@string/your_rating"
                                android:textAlignment="center"
                                android:textColor="@color/colorGrey"
                                android:textSize="@dimen/sp_12"
                                app:font="@{`regular`}" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_15"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

<!--
                        <ImageView
                            android:id="@+id/img_approve"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_check_mark" />
-->

                        <TextView
                            android:id="@+id/tv_approved"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_vertical"
                            android:drawablePadding="@dimen/dp_10"
                            android:text="@string/approved_by_system_administrator"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_14"
                            app:font="@{`bold`}" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/colorGreyLight" />

                    <LinearLayout
                        android:id="@+id/lin_no_comp_orders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_no_comp_orders"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:drawableStart="@drawable/ic_help_red"
                            android:drawablePadding="@dimen/dp_10"
                            android:gravity="center_vertical"
                            android:text="@string/no_completed_orders"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_14"
                            app:font="@{`bold`}" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@color/colorGreyLight" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_current_week"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:drawableStart="@drawable/ic_help_red"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:text="@{`Orders without lateness within current week : `+model.delayedOrders.toString()}"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_14"
                        app:font="@{`bold`}" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/colorGreyLight" />

                    <TextView
                        android:id="@+id/tv_notifications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:drawableStart="@drawable/ic_help_red"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:text="@string/check_autostart_settings_to_make_sure_you_will_receive_all_notifications"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_14"
                        app:font="@{`bold`}" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/colorGreyLight" />

                    <TextView
                        android:id="@+id/tv_selfie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_10"
                        android:drawableStart="@drawable/ic_camera"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:onClick="@{(v) -> viewModel.clickListener(v)}"
                        android:text="@string/your_today"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_14"
                        app:font="@{`bold`}" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/colorGreyLight" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_order_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    app:cardCornerRadius="@dimen/dp_15"
                    app:cardElevation="@dimen/dp_5">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_15">

                        <TextView
                            android:id="@+id/tv_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:paddingRight="@dimen/dp_5"
                            android:text="@string/referral_code"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_14"
                            app:font="@{`regular`}" />

                        <TextView
                            android:id="@+id/tv_referral_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingRight="@dimen/dp_5"
                            android:text="@{model.referralCode.toString()}"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_16"
                            app:font="@{`bold`}" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:paddingBottom="@dimen/dp_15">

                    <TextView
                        android:id="@+id/tv_invite_friend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:onClick="@{(v) -> viewModel.clickListener(v)}"
                        android:layout_marginTop="@dimen/dp_40"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@drawable/round_corners_home_tab"
                        android:backgroundTint="@color/colorPrimary"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_30"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_30"
                        android:paddingBottom="@dimen/dp_10"
                        android:text="@string/invite_friend"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_14"
                        app:font="@{`bold`}" />

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</layout>