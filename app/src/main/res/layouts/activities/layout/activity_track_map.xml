<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="orderDetailViewModel"
            type="com.courierdriver.viewmodels.order.OrderDetailViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbarCommon"
            layout="@layout/common_toolbar_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <fragment
                android:id="@+id/map_view"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff" />

            <RelativeLayout
                android:id="@+id/rel_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_centerHorizontal="true"
                android:background="@drawable/round_button_layout"
                android:backgroundTint="@color/colorPrimary"
                android:onClick="@{(v) -> orderDetailViewModel.clickListener(v)}">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/show_route"
                    android:textSize="@dimen/sp_14"
                    android:paddingLeft="7dp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:paddingRight="7dp"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:textColor="@color/colorWhite"
                    app:font="@{`regular`}"/>
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
</layout>