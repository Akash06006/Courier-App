<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.courierdriver.common.BindingUtils" />


        <variable
            name="onClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="homeViewModel"
            type="com.courierdriver.viewmodels.home.HomeViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbarCommon"
            layout="@layout/common_toolbar_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:visibility="visible"
            app:onClick="@{(v) -> homeViewModel.clickListener(v)}" />

        <LinearLayout
            android:id="@+id/lin_tabs_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_top_circle"
            android:backgroundTint="@color/colorLightPink"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dp_20"
                android:paddingLeft="20dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_profile_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:onClick="@{(v) -> homeViewModel.clickListener(v)}"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:text="Profile details"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextBlue"
                        android:textSize="@dimen/sp_14"
                        app:font="@{`bold`}" />

                    <TextView
                        android:id="@+id/tv_statistics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:onClick="@{(v) -> homeViewModel.clickListener(v)}"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:text="Statistics"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_14"
                        app:font="@{`bold`}" />

                    <TextView
                        android:id="@+id/tv_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:onClick="@{(v) -> homeViewModel.clickListener(v)}"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:text="Account"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_14"
                        app:font="@{`bold`}" />

                    <TextView
                        android:id="@+id/tv_id_proof"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:onClick="@{(v) -> homeViewModel.clickListener(v)}"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:text="ID and Proofs"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_14"
                        app:font="@{`bold`}" />

                    <TextView
                        android:id="@+id/tv_payment_options"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:onClick="@{(v) -> homeViewModel.clickListener(v)}"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:text="Payment options"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_14"
                        app:font="@{`bold`}" />

                    <TextView
                        android:id="@+id/tv_locomo_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:onClick="@{(v) -> homeViewModel.clickListener(v)}"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:text="Locomo id"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_14"
                        app:font="@{`bold`}" />
                </LinearLayout>
            </HorizontalScrollView>

            <FrameLayout
                android:id="@+id/frame_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_top_circle"
                android:backgroundTint="@color/colorTextBlue" />
        </LinearLayout>
    </LinearLayout>
</layout>
