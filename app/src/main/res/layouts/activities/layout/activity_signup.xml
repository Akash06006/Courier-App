<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.courierdriver.common.BindingUtils" />

        <variable
            name="loginViewModel"
            type="com.courierdriver.viewmodels.LoginViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLiteWhite"
        android:orientation="vertical"
        app:hideKeyBoardOnClick="@{`back` }">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_bottom_circle"
            android:backgroundTint="@color/colorPrimary"
            android:paddingTop="@dimen/dp_80"
            android:paddingBottom="@dimen/dp_100">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_app_icon_splash"
                android:textColor="@color/colorWhite" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel_image"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="-60dp"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/ic_top_bottom_circle"
            android:backgroundTint="@color/colorWhite"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_20">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="@string/signup"
                        android:textAllCaps="false"
                        android:textColor="@color/colorTextBlue"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        app:font="@{`bold`}"
                        tools:ignore="AllCaps" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/img_profile"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/edtFirstName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="10dp"
                                android:hint="@string/fname"
                                android:maxLength="32"
                                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                                android:imeOptions="actionNext"
                                android:paddingBottom="15dp"
                                android:singleLine="true"
                                android:inputType="textPersonName"
                                android:textSize="14sp"
                                app:font="@{`regular`}" />

                            <EditText
                                android:id="@+id/edtLastName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:hint="@string/lname"
                                android:maxLength="32"
                                android:inputType="textPersonName"
                                android:imeOptions="actionNext"
                                android:paddingBottom="15dp"
                                android:singleLine="true"
                                android:textSize="14sp"
                                app:font="@{`regular`}" />

                        </LinearLayout>


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_profile"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_10"
                            android:background="@drawable/ic_user_profile"
                            android:contentDescription="@string/todo"
                            android:onClick="@{(v) -> loginViewModel.clickListener(v)}" />

                    </RelativeLayout>

                    <EditText
                        android:id="@+id/edtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:maxLength="100"
                        android:hint="@string/email"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:paddingBottom="15dp"
                        android:singleLine="true"
                        android:textSize="14sp"
                        app:font="@{`regular`}" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/lin_ccp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="7dp"
                            android:orientation="vertical">

                            <com.hbb20.CountryCodePicker
                                android:id="@+id/btn_ccp"
                                android:layout_width="@dimen/dp_120"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:paddingLeft="@dimen/dp_5"
                                android:paddingTop="@dimen/dp_2"
                                android:paddingRight="@dimen/dp_5"
                                android:paddingBottom="@dimen/dp_2"
                                app:ccpDialog_showNameCode="false"
                                app:ccp_arrowSize="@dimen/dp_20"
                                app:ccp_clickable="true"
                                app:ccp_contentColor="@color/colorBlack"
                                app:ccp_defaultPhoneCode="91"
                                app:ccp_showFlag="true"
                                app:ccp_showPhoneCode="true"
                                app:ccp_textSize="@dimen/sp_14" />

                            <View
                                android:layout_width="@dimen/dp_120"
                                android:layout_height="1.5dp"
                                android:layout_marginLeft="10dp"
                                android:background="@color/colorGrey" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/edtPhone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginRight="10dp"
                            android:digits="0123456789"
                            android:hint="@string/phone_number"
                            android:maxLength="13"
                            android:imeOptions="actionNext"
                            android:inputType="phone"
                            android:paddingTop="10dp"
                            android:singleLine="true"
                            android:textSize="14sp"
                            app:font="@{`regular`}" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_referral_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="10dp"
                        android:hint="Referral Code (Optional)"
                        android:imeOptions="actionDone"
                        android:paddingBottom="15dp"
                        android:singleLine="true"
                        android:textSize="14sp"
                        app:font="@{`regular`}" />

                    <EditText
                        android:id="@+id/edtPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:hint="@string/password"
                        android:visibility="gone"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        android:paddingBottom="15dp"
                        android:singleLine="true"
                        android:textSize="14sp"
                        app:font="@{`regular`}" />

                    <EditText
                        android:id="@+id/edtConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:hint="@string/confirm_password"
                        android:visibility="gone"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:paddingBottom="15dp"
                        android:singleLine="true"
                        android:textSize="14sp"
                        app:font="@{`regular`}" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp">

                        <CheckBox
                            android:id="@+id/checkBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15" />

                        <TextView
                            android:id="@+id/tvcheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_22"
                            android:layout_toRightOf="@id/checkBox"
                            android:text="By continuing you agree to our Terms and Conditions ."
                            android:textColor="@color/colorGrey"
                            android:textSize="@dimen/sp_12"
                            app:font="@{`regular`}" />
                    </RelativeLayout>

                    <Button
                        android:id="@+id/btnSignup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_25"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:background="@drawable/shape_button_back"
                        android:onClick="@{(v) -> loginViewModel.clickListener(v)}"
                        android:text="@string/signup"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/button_text_size"
                        app:font="@{`regular`}" />

                </LinearLayout>

            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</layout>