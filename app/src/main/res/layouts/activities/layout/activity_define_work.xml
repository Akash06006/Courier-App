<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.courierdriver.viewmodels.DefineWorkViewModel" />

        <variable
            name="model"
            type="com.courierdriver.model.DefineWorkModel.Body" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_40"
           />
<!-- android:src="@drawable/locomo_small_icon" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/help_us_to_understand_you"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            app:font="@{`regular`}" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/ic_top_circle"
            android:backgroundTint="@color/colorTextBlue"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15">

                <TextView
                    android:id="@+id/tv_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:text="@{model.que}"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dimen_24sp"
                    app:font="@{`semibold`}" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lin_tabs_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_top_circle"
                android:backgroundTint="@color/colorWhite"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_40"
                    android:checkedButton="@id/rb_option1"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rb_option1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimary"
                        android:text="@{model.option1}"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_16"
                        app:font="@{`semibold`}" />

                    <RadioButton
                        android:id="@+id/rb_option2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:buttonTint="@color/colorPrimary"
                        android:text="@{model.option2}"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_16"
                        app:font="@{`semibold`}" />

                    <RadioButton
                        android:id="@+id/rb_option3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:buttonTint="@color/colorPrimary"
                        android:text="@{model.option3}"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_16"
                        app:font="@{`semibold`}" />

                    <RadioButton
                        android:id="@+id/rb_option4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:buttonTint="@color/colorPrimary"
                        android:text="@{model.option4}"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_16"
                        app:font="@{`semibold`}" />

                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_40"
                    android:paddingBottom="@dimen/dp_15">

                    <TextView
                        android:id="@+id/tv_skip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@drawable/round_corners_home_tab"
                        android:backgroundTint="@color/colorPrimary"
                        android:gravity="center"
                        android:onClick="@{(v) -> viewModel.clickListener(v)}"
                        android:paddingLeft="@dimen/dp_30"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_30"
                        android:paddingBottom="@dimen/dp_10"
                        android:text="@string/skip"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_14"
                        app:font="@{`bold`}" />

                    <TextView
                        android:id="@+id/tv_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@drawable/round_corners_home_tab"
                        android:backgroundTint="@color/colorPrimary"
                        android:gravity="center"
                        android:onClick="@{(v) -> viewModel.clickListener(v)}"
                        android:paddingLeft="@dimen/dp_30"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_30"
                        android:paddingBottom="@dimen/dp_10"
                        android:text="@string/next"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_14"
                        app:font="@{`bold`}" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</layout>