<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.courierdriver.common.BindingUtils" />

        <variable
            name="viewModel"
            type="com.courierdriver.viewmodels.profile.ProfileViewModel" />

        <variable
            name="model"
            type="com.courierdriver.model.StatisticsModel.Body" />

        <variable
            name="currencySign"
            type="String" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_top_circle"
        android:backgroundTint="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_10">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:elevation="@dimen/dp_10"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_10">

                <LinearLayout
                    android:id="@+id/lin_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_10"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rating"
                            android:textColor="@color/colorGrey"
                            android:textSize="@dimen/sp_12"
                            app:font="@{`regular`}" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="@{model.all.avgRating}"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_14"
                            app:font="@{`bold`}" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order Completed"
                            android:textColor="@color/colorGrey"
                            android:textSize="@dimen/sp_12"
                            app:font="@{`regular`}" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="@{model.all.completedOrders}"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_14"
                            app:font="@{`bold`}" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/my_income"
                            android:textColor="@color/colorGrey"
                            android:textSize="@dimen/sp_12"
                            app:font="@{`regular`}" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="@{currencySign+BindingUtils.setDecimalText(model.all.myIncome)}"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/sp_14"
                            app:font="@{`bold`}" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin_rating"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_30"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_income"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_14"
                        app:font="@{`semibold`}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="@{model.all.myIncome}"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_12"
                        app:font="@{`regular`}" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/earned_points"
                android:textColor="@color/colorTextBlue"
                android:textSize="@dimen/sp_14"
                app:font="@{`bold`}" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:elevation="@dimen/dp_10"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/invited_friends"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_14"
                            app:font="@{`regular`}" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="@{model.pointsData.invitedFriends}"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_14"
                            app:font="@{`bold`}" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@color/colorGreyLight" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_15"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/earned_points"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_14"
                            app:font="@{`regular`}" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="@{model.pointsData.earnedPoints}"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_14"
                            app:font="@{`bold`}" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_convert_to_cash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_45"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_45"
                        android:background="@drawable/round_corners_home_tab"
                        android:backgroundTint="@color/colorPrimary"
                        android:gravity="center"
                        android:onClick="@{(v) -> viewModel.clickListener(v)}"
                        android:padding="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_20"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_20"
                        android:paddingBottom="@dimen/dp_10"
                        android:text="@string/convert_to_cash"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_14"
                        app:font="@{`bold`}" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/pay_to_locomo"
                android:textColor="@color/colorTextBlue"
                android:textSize="@dimen/sp_14"
                app:font="@{`bold`}" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:elevation="@dimen/dp_10"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="Total Commission"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_14"
                            app:font="@{`regular`}" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="@{currencySign+BindingUtils.setDecimalText(model.commissionData.totalCommission)}"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_14"
                            app:font="@{`bold`}" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@color/colorGreyLight" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_15"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/earned_cash"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_14"
                            app:font="@{`regular`}" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="@{`-`+currencySign+BindingUtils.setDecimalText(model.commissionData.earnedCash)}"
                            android:textColor="@color/colorSuccess"
                            android:textSize="@dimen/sp_14"
                            app:font="@{`bold`}" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@color/colorGreyLight" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_15"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/additional_charges"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_14"
                            app:font="@{`regular`}" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="@{`+`+currencySign+BindingUtils.setDecimalText(model.commissionData.payableCommission)}"
                            android:textColor="@color/colorRed"
                            android:textSize="@dimen/sp_14"
                            app:font="@{`bold`}" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@color/colorGreyLight" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_15"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/total_payable"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_14"
                            app:font="@{`regular`}" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="@{currencySign+BindingUtils.setDecimalText(model.commissionData.totalCommission)}"
                            android:textColor="@color/colorRed"
                            android:textSize="@dimen/sp_14"
                            app:font="@{`bold`}" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@color/colorGreyLight" />

                    <TextView
                        android:id="@+id/tv_pay_now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@drawable/round_corners_home_tab"
                        android:backgroundTint="@color/colorPrimary"
                        android:gravity="center"
                        android:onClick="@{(v) -> viewModel.clickListener(v)}"
                        android:paddingLeft="@dimen/dp_50"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_50"
                        android:paddingBottom="@dimen/dp_10"
                        android:text="@string/pay_now"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_14"
                        app:font="@{`bold`}" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/my_income"
                android:textColor="@color/colorTextBlue"
                android:textSize="@dimen/sp_14"
                app:font="@{`bold`}" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:elevation="@dimen/dp_10"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/sp_weeks"
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:backgroundTint="@color/colorPrimary" />
                    <!--                    style="@style/SpinnerTheme"-->

                    <!--
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/dp_12"
                                            android:layout_marginTop="@dimen/dp_10"
                                            android:drawableRight="@drawable/ic_small_arrow_down"
                                            android:drawablePadding="@dimen/dp_20"
                                            android:drawableTint="@color/colorPrimary"
                                            android:gravity="center_vertical"
                                            android:paddingLeft="@dimen/dp_10"
                                            android:paddingRight="@dimen/dp_10"
                                            android:text="Last 7 days"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="@dimen/sp_14"
                                            app:font="@{`bold`}" />
                    -->

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@color/colorGreyLight" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rating"
                                android:textColor="@color/colorGrey"
                                android:textSize="@dimen/sp_12"
                                app:font="@{`regular`}" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="@{model.week.avgRating}"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/sp_14"
                                app:font="@{`bold`}" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Order Completed"
                                android:textColor="@color/colorGrey"
                                android:textSize="@dimen/sp_12"
                                app:font="@{`regular`}" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="@{model.week.completedOrders}"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/sp_14"
                                app:font="@{`bold`}" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/my_income"
                                android:textColor="@color/colorGrey"
                                android:textSize="@dimen/sp_12"
                                app:font="@{`regular`}" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="@{currencySign+BindingUtils.setDecimalText(model.week.myIncome)}"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/sp_14"
                                app:font="@{`bold`}" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/monthly"
                android:textColor="@color/colorTextBlue"
                android:textSize="@dimen/sp_14"
                app:font="@{`bold`}" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:elevation="@dimen/dp_10"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10">

                        <Spinner
                            android:id="@+id/sp_years"
                            android:layout_width="@dimen/dp_120"
                            android:layout_height="@dimen/dp_50"
                            android:backgroundTint="@color/colorPrimary" />

                        <Spinner
                            android:id="@+id/sp_months"
                            android:layout_width="@dimen/dp_120"
                            android:layout_height="@dimen/dp_50"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:backgroundTint="@color/colorPrimary" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_monthly_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>