<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.courierdriver.viewmodels.profile.ProfileViewModel" />

        <variable
            name="model"
            type="com.courierdriver.model.PaymentOptionsModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_top_circle"
        android:backgroundTint="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_20"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_10"
                android:backgroundTint="@color/colorWhite"
                app:cardCornerRadius="@dimen/dp_30"
                app:cardElevation="@dimen/dp_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_10">

                    <RelativeLayout
                        android:id="@+id/rel_paytm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_20"
                        android:onClick="@{(v) -> viewModel.clickListener(v)}"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_paytm" />

                        <ImageView
                            android:id="@+id/img_arrow_paytm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_small_arrow_down" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/lin_paytm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:background="@color/colorGreyLight" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_20"
                            android:text="@string/number"
                            android:textColor="@color/colorGrey"
                            android:textSize="@dimen/sp_14"
                            app:font="@{`regular`}" />

                        <EditText
                            android:id="@+id/et_phone_paytm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_20"
                            android:background="@drawable/shape_round_color_primary"
                            android:inputType="phone"
                            android:paddingLeft="@dimen/dp_20"
                            android:singleLine="true"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_20"
                            android:paddingBottom="@dimen/dp_10"
                            android:text="@{model.body.get(0).paytmNo}"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_16" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_10"
                android:backgroundTint="@color/colorWhite"
                app:cardCornerRadius="@dimen/dp_30"
                app:cardElevation="@dimen/dp_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_10">

                    <RelativeLayout
                        android:id="@+id/rel_google_pay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_20"
                        android:onClick="@{(v) -> viewModel.clickListener(v)}"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_google_pay" />

                        <ImageView
                            android:id="@+id/img_arrow_google_pay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_small_arrow_down" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/lin_google_pay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:background="@color/colorGreyLight" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_20"
                            android:text="@string/number"
                            android:textColor="@color/colorGrey"
                            android:textSize="@dimen/sp_14"
                            app:font="@{`regular`}" />

                        <EditText
                            android:id="@+id/et_phone_google_pay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_20"
                            android:background="@drawable/shape_round_color_primary"
                            android:inputType="phone"
                            android:paddingLeft="@dimen/dp_20"
                            android:paddingTop="@dimen/dp_10"
                            android:singleLine="true"
                            android:paddingRight="@dimen/dp_20"
                            android:paddingBottom="@dimen/dp_10"
                            android:text="@{model.body.get(0).gpayNo}"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_16" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_10"
                android:backgroundTint="@color/colorWhite"
                app:cardCornerRadius="@dimen/dp_30"
                app:cardElevation="@dimen/dp_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_10">

                    <RelativeLayout
                        android:id="@+id/rel_phone_pe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_20"
                        android:onClick="@{(v) -> viewModel.clickListener(v)}"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_phone_pe" />

                        <ImageView
                            android:id="@+id/img_arrow_phone_pe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_small_arrow_down" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/lin_phone_pe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:background="@color/colorGreyLight" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_20"
                            android:text="@string/number"
                            android:textColor="@color/colorGrey"
                            android:textSize="@dimen/sp_14"
                            app:font="@{`regular`}" />

                        <EditText
                            android:id="@+id/et_phone_phone_pe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_20"
                            android:background="@drawable/shape_round_color_primary"
                            android:inputType="phone"
                            android:paddingLeft="@dimen/dp_20"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_20"
                            android:paddingBottom="@dimen/dp_10"
                            android:singleLine="true"
                            android:text="@{model.body.get(0).phonePayNo}"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_16" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_invite_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/round_corners_home_tab"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:onClick="@{(v) -> viewModel.clickListener(v)}"
                android:paddingLeft="@dimen/dp_30"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_30"
                android:paddingBottom="@dimen/dp_10"
                android:text="@string/submit"
                android:layout_marginBottom="@dimen/dp_10"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_14"
                app:font="@{`bold`}" />

        </LinearLayout>

    </ScrollView>
</layout>