<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        //TODO change this below variale
        <!--<variable
            name="model"
            type="com.courierdriver.model.order.OrderListModel.Body" />-->

        <variable
            name="orderDetailViewModel"
            type="com.courierdriver.viewmodels.order.OrderDetailViewModel" />

        <variable
            name="orderDetailModel"
            type="com.courierdriver.model.order.OrdersDetailResponse.Data" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbarCommon"
            layout="@layout/common_toolbar_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:visibility="visible" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <fragment
                        android:id="@+id/map_view"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="#ffffff" />


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_10"
                        app:cardCornerRadius="@dimen/dp_20"
                        app:cardElevation="@dimen/dp_5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/dp_15">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <!-- android:text="@{`Order #`+model.orderNo}"-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:text="Order Details"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/sp_14"
                                    app:font="@{`bold`}" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:drawableLeft="@drawable/ic_cash"
                                    android:text="@{`$ `+orderDetailModel.totalOrderPrice}"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/sp_14"
                                    app:font="@{`bold`}" />
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="@dimen/dp_10"
                                android:background="@color/colorGrey" />

                            <RelativeLayout
                                android:id="@+id/rel_route"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10">

                                <ImageView
                                    android:id="@+id/img_route"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignTop="@+id/lin_route"
                                    android:layout_alignBottom="@+id/lin_route"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:src="@drawable/ic_route" />

                                <LinearLayout
                                    android:id="@+id/lin_route"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_toRightOf="@+id/img_route"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/pickup_address"
                                        android:textColor="@color/colorGrey"
                                        android:textSize="@dimen/sp_12"
                                        app:font="@{`regular`}" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@{orderDetailModel.pickupAddress.address}"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/sp_14"
                                        app:font="@{`semibold`}" />
                                </LinearLayout>

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rv_delivery_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/img_route" />
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="@dimen/dp_10"
                                android:background="@color/colorGrey" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/order_no"
                                        android:textColor="@color/colorGrey"
                                        android:textSize="@dimen/sp_11"
                                        app:font="@{`regular`}" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dp_5"
                                        android:drawableLeft="@drawable/order_no"
                                        android:drawablePadding="@dimen/dp_2"
                                        android:text="@{orderDetailModel.orderNo}"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/sp_12"
                                        app:font="@{`semibold`}" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/weight"
                                        android:textColor="@color/colorGrey"
                                        android:textSize="@dimen/sp_11"
                                        app:font="@{`regular`}" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dp_5"
                                        android:drawableLeft="@drawable/ic_weight_home"
                                        android:drawablePadding="@dimen/dp_2"
                                        android:text="@{orderDetailModel.weight.name}"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/sp_12"
                                        app:font="@{`semibold`}" />

                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:id="@+id/view_route"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="@dimen/dp_10"
                                android:background="@color/colorGrey" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/delivery_options"
                                        android:textColor="@color/colorGrey"
                                        android:textSize="@dimen/sp_11"
                                        app:font="@{`regular`}" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dp_5"
                                        android:drawableLeft="@drawable/ic_delivery_options_home"
                                        android:drawablePadding="@dimen/dp_2"
                                        android:text="@{orderDetailModel.deliveryoption.title}"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/sp_12"
                                        app:font="@{`semibold`}" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/value"
                                        android:textColor="@color/colorGrey"
                                        android:textSize="@dimen/sp_11"
                                        app:font="@{`regular`}" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="$"
                                            android:textColor="@color/colorHomeTabRed"
                                            android:textSize="@dimen/sp_14" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@{orderDetailModel.parcelValue}"
                                            android:textColor="@color/colorBlack"
                                            android:textSize="@dimen/sp_12"
                                            app:font="@{`semibold`}" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="@dimen/dp_10"
                                android:background="@color/colorGrey" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/vehicle_type"
                                        android:textColor="@color/colorGrey"
                                        android:textSize="@dimen/sp_11"
                                        app:font="@{`regular`}" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dp_5"
                                        android:drawableLeft="@drawable/vehicle_type"
                                        android:drawablePadding="@dimen/dp_2"
                                        android:text="@{orderDetailModel.vehicle.name}"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/sp_12"
                                        app:font="@{`semibold`}" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/fare_to_be_collected"
                                        android:textColor="@color/colorGrey"
                                        android:textSize="@dimen/sp_11"
                                        app:font="@{`regular`}" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dp_5"
                                        android:drawableLeft="@drawable/fare_collected"
                                        android:drawablePadding="@dimen/dp_2"
                                        android:text="@{orderDetailModel.fareCollected}"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/sp_12"
                                        app:font="@{`semibold`}" />

                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="@dimen/dp_10"
                                android:background="@color/colorGrey" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/total_order_price"
                                        android:textColor="@color/colorGrey"
                                        android:textSize="@dimen/sp_11"
                                        app:font="@{`regular`}" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="$"
                                            android:textColor="@color/colorHomeTabRed"
                                            android:textSize="@dimen/sp_14" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@{orderDetailModel.totalOrderPrice}"
                                            android:textColor="@color/colorBlack"
                                            android:textSize="@dimen/sp_12"
                                            app:font="@{`semibold`}" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/your_earning"
                                        android:textColor="@color/colorGrey"
                                        android:textSize="@dimen/sp_11"
                                        app:font="@{`regular`}" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="$"
                                            android:textColor="@color/colorHomeTabRed"
                                            android:textSize="@dimen/sp_14" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@{orderDetailModel.totalOrderPrice}"
                                            android:textColor="@color/colorBlack"
                                            android:textSize="@dimen/sp_12"
                                            app:font="@{`semibold`}" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/pay_to_locomo"
                                        android:textColor="@color/colorGrey"
                                        android:textSize="@dimen/sp_11"
                                        app:font="@{`regular`}" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="$"
                                            android:textColor="@color/colorHomeTabRed"
                                            android:textSize="@dimen/sp_14" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@{orderDetailModel.parcelValue}"
                                            android:textColor="@color/colorBlack"
                                            android:textSize="@dimen/sp_12"
                                            app:font="@{`semibold`}" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/lin_active_order"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <!-- <View
                                     android:layout_width="match_parent"
                                     android:layout_height="0.5dp"
                                     android:layout_marginTop="@dimen/dp_10"
                                     android:background="@color/colorGrey" />-->


                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/ll_available"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_available_accept_order"
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:background="@drawable/round_corners_home_tab"
                            android:backgroundTint="@color/colorHomeTabRed"
                            android:onClick="@{(v) -> orderDetailViewModel.clickListener(v)}"
                            android:padding="@dimen/dp_10"
                            android:paddingLeft="@dimen/dp_20"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_20"
                            android:paddingBottom="@dimen/dp_10"
                            android:text="@string/accept"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/sp_14"
                            app:font="@{`bold`}" />

                        <TextView
                            android:id="@+id/tv_available_cancel_order"
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:background="@drawable/round_corners_home_tab"
                            android:backgroundTint="@color/colorGreyLight"
                            android:onClick="@{(v) -> orderDetailViewModel.clickListener(v)}"
                            android:paddingLeft="@dimen/dp_20"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_20"
                            android:paddingBottom="@dimen/dp_10"
                            android:text="@string/cancel"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_14"
                            app:font="@{`bold`}" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_accepted_take_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_accepted_take_order"
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:background="@drawable/round_corners_home_tab"
                            android:backgroundTint="@color/colorHomeTabRed"
                            android:onClick="@{(v) -> orderDetailViewModel.clickListener(v)}"
                            android:padding="@dimen/dp_10"
                            android:paddingLeft="@dimen/dp_20"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_20"
                            android:paddingBottom="@dimen/dp_10"
                            android:text="@string/take_order"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/sp_14"
                            app:font="@{`bold`}" />

                        <TextView
                            android:id="@+id/tv_accepted_cancel_order"
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:background="@drawable/round_corners_home_tab"
                            android:backgroundTint="@color/colorGreyLight"
                            android:onClick="@{(v) -> orderDetailViewModel.clickListener(v)}"
                            android:paddingLeft="@dimen/dp_20"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_20"
                            android:paddingBottom="@dimen/dp_10"
                            android:text="@string/cancel"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_14"
                            app:font="@{`bold`}" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_complete_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_complete_order"
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:background="@drawable/round_corners_home_tab"
                            android:backgroundTint="@color/colorHomeTabRed"
                            android:onClick="@{(v) -> orderDetailViewModel.clickListener(v)}"
                            android:padding="@dimen/dp_10"
                            android:paddingLeft="@dimen/dp_20"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_20"
                            android:paddingBottom="@dimen/dp_10"
                            android:text="@string/completed"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/sp_14"
                            app:font="@{`bold`}" />

                        <!--  <TextView
                              android:id="@+id/tv_cancel_complete_order"
                              android:layout_width="@dimen/dp_100"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="@dimen/dp_10"
                              android:layout_marginRight="@dimen/dp_10"
                              android:background="@drawable/round_corners_home_tab"
                              android:backgroundTint="@color/colorGreyLight"
                              android:onClick="@{(v) -> orderDetailViewModel.clickListener(v)}"
                              android:paddingLeft="@dimen/dp_20"
                              android:paddingTop="@dimen/dp_10"
                              android:paddingRight="@dimen/dp_20"
                              android:paddingBottom="@dimen/dp_10"
                              android:text="@string/cancel"
                              android:textAlignment="center"
                              android:textColor="@color/colorBlack"
                              android:textSize="@dimen/sp_14"
                              app:font="@{`bold`}" />-->

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</layout>