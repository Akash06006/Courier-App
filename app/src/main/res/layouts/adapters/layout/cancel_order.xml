<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools">

    <data>

        <variable
                name="orderViewModel"
                type="com.example.courier.viewmodels.order.OrderViewModel" />

        <variable
                name="orderDetailModel"
                type="com.example.courier.model.order.OrdersDetailResponse.Data" />

    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round_corner"
            android:gravity="center"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:text="@string/cancel_orders"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_16"
                app:font="@{`semibold`}" />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_round_corner"
                android:elevation="5dp"
                android:padding="5dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                    <LinearLayout
                            android:id="@+id/llCancelCharges"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:gravity="center"
                            android:orientation="horizontal">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/dp_10"
                                android:text="@string/cancellation_charges"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/sp_16"
                                app:font="@{`semibold`}" />

                        <TextView
                                android:id="@+id/txtCharges"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/colorBlack"
                                android:drawableRight="@drawable/ic_rupee_red"
                                android:drawablePadding="2dp"
                                android:gravity="center"
                                android:padding="@dimen/dp_10"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/sp_16"
                                app:font="@{`semibold`}" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/llCancelCharges"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"
                            android:padding="@dimen/dp_5"
                            android:visibility="visible" />

                    <Button
                            android:id="@+id/btnDone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="@dimen/dp_20"
                            android:background="@drawable/shape_button_back"
                            android:elevation="@dimen/dp_15"
                            android:gravity="center"
                            android:text="@string/done"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"
                            app:font="@{`bold`}" />
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</layout>