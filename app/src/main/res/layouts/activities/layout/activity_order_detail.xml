<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools">

    <data>

        <variable
                name="orderViewModel"
                type="com.android.courier.viewmodels.order.OrderViewModel" />

        <variable
                name="orderDetailModel"
                type="com.android.courier.model.order.OrdersDetailResponse.Data" />

    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <include
                android:id="@+id/toolbarCommon"
                layout="@layout/common_toolbar_back"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:visibility="visible" />

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <fragment
                            android:id="@+id/map_view"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:background="#ffffff" />

                    <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp"
                            card_view:cardElevation="@dimen/dp_15">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                            <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/colorPrimary">

                                <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="5dp"
                                        android:layout_toLeftOf="@+id/txtOrderStatus"
                                        android:gravity="left"
                                        android:padding="10dp"
                                        android:text="@string/order_details"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        app:font="@{`bold`}" />

                            </RelativeLayout>

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:orientation="horizontal"
                                    android:padding="5dp"
                                    android:weightSum="3">

                                <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                    <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="left"
                                            android:text="@string/order_no"
                                            android:textSize="10sp"
                                            app:font="@{`regular`}" />

                                    <TextView
                                            android:id="@+id/txtOrderNo"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:drawableLeft="@drawable/ic_order_no"
                                            android:drawablePadding="5dp"
                                            android:gravity="left"
                                            android:text="@{orderDetailModel.orderNo}"
                                            android:textColor="@color/colorBlack"
                                            app:font="@{`regular`}" />
                                </LinearLayout>

                                <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                    <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="left"
                                            android:text="@string/weight"
                                            android:textSize="10sp"
                                            app:font="@{`regular`}" />

                                    <TextView
                                            android:id="@+id/txtWeight"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:drawableLeft="@drawable/ic_weight"
                                            android:drawablePadding="5dp"
                                            android:gravity="left"
                                            android:text="@{orderDetailModel.weight.name}"
                                            android:textColor="@color/colorBlack"
                                            app:font="@{`regular`}" />
                                </LinearLayout>

                                <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                    <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="left"
                                            android:text="@string/fare"
                                            android:textSize="10sp"
                                            app:font="@{`regular`}" />

                                    <TextView
                                            android:id="@+id/txtFare"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:drawableLeft="@drawable/ic_rupee"
                                            android:drawablePadding="2dp"
                                            android:gravity="center_vertical"
                                            android:text="@{orderDetailModel.orderPrice}"
                                            android:textColor="@color/colorBlack"
                                            app:font="@{`regular`}" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="5dp"
                                    android:orientation="horizontal"
                                    android:padding="5dp"
                                    android:weightSum="3">

                                <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="2"
                                        android:orientation="vertical">

                                    <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="left"
                                            android:text="@string/delivery_option"
                                            android:textSize="10sp"
                                            app:font="@{`regular`}" />

                                    <TextView
                                            android:id="@+id/txtDeliveryOption"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:drawableLeft="@drawable/ic_delivery_option"
                                            android:drawablePadding="5dp"
                                            android:gravity="left"
                                            android:text="@{orderDetailModel.deliveryoption.title}"
                                            android:textColor="@color/colorBlack"
                                            app:font="@{`regular`}" />
                                </LinearLayout>

                                <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                    <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="left"
                                            android:text="@string/value"
                                            android:textSize="10sp"
                                            app:font="@{`regular`}" />

                                    <TextView
                                            android:id="@+id/txtValue"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:drawableLeft="@drawable/ic_rupee"
                                            android:drawablePadding="5dp"
                                            android:gravity="left"
                                            android:text="@{orderDetailModel.parcelValue}"
                                            android:textColor="@color/colorBlack"
                                            app:font="@{`regular`}" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="5dp"
                                    android:orientation="horizontal"
                                    android:padding="5dp">

                                <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                    <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="left"
                                            android:text="@string/vehicle_type"
                                            android:textSize="10sp"
                                            app:font="@{`regular`}" />

                                    <TextView
                                            android:id="@+id/txtVehicleType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:drawableLeft="@drawable/ic_vehicle_logo"
                                            android:drawablePadding="5dp"
                                            android:gravity="left"
                                            android:text="@{orderDetailModel.vehicle.name}"
                                            android:textColor="@color/colorBlack"
                                            app:font="@{`regular`}" />
                                </LinearLayout>

                                <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="40dp"
                                        android:orientation="vertical">

                                    <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="left"
                                            android:text="@string/fair_collected"
                                            android:textSize="10sp"
                                            app:font="@{`regular`}" />

                                    <TextView
                                            android:id="@+id/txtFareCalculated"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:drawableLeft="@drawable/ic_fare"
                                            android:drawablePadding="5dp"
                                            android:gravity="left"
                                            android:text="@{orderDetailModel.fareCollected}"
                                            android:textColor="@color/colorBlack"
                                            app:font="@{`regular`}" />
                                </LinearLayout>
                            </LinearLayout>

                            <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/shape_button_back_primary"
                                    android:padding="10dp">
                                <!---->
                                <TextView
                                        android:id="@+id/txtDelBoyName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_marginRight="5dp"
                                        android:layout_toLeftOf="@+id/txtDelBoy"
                                        android:gravity="left"
                                        android:padding="5dp"
                                        android:text="Akash Gharu"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        app:font="@{`bold`}" />

                                <TextView
                                        android:id="@+id/txtDelBoy"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginRight="5dp"
                                        android:layout_toLeftOf="@+id/txtOrderStatus"
                                        android:gravity="left"
                                        android:padding="10dp"
                                        android:text="@string/del_boy"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="12sp"
                                        app:font="@{`regular`}" />

                                <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/txtDelBoyName"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:orientation="horizontal">

                                    <RelativeLayout
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginBottom="5dp"
                                            android:background="@drawable/shape_round_corner"
                                            android:elevation="2dp"
                                            android:onClick="@{(v) -> orderViewModel.clickListener(v)}">
                                        <!-- -->
                                        <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:background="@drawable/ic_call" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                            android:id="@+id/imgChat"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginRight="5dp"
                                            android:layout_marginBottom="5dp"
                                            android:background="@drawable/shape_round_corner"
                                            android:elevation="2dp"
                                            android:onClick="@{(v) -> orderViewModel.clickListener(v)}">
                                        <!-- android:elevation="5dp"-->
                                        <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:background="@drawable/ic_chat" />

                                    </RelativeLayout>

                                </LinearLayout>

                            </RelativeLayout>

                            <LinearLayout
                                    android:id="@+id/bottomButtons"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:orientation="horizontal"
                                    android:padding="10dp"
                                    android:weightSum="2">

                                <Button
                                        android:id="@+id/btnSchedule"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="5dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/shape_button_back"
                                        android:onClick="@{(v) -> orderViewModel.clickListener(v)}"
                                        android:text="@string/reschedule"
                                        android:textAllCaps="false"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="@dimen/button_text_size" />

                                <Button
                                        android:id="@+id/btnCancel"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginBottom="5dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/shape_button_back_red"
                                        android:onClick="@{(v) -> orderViewModel.clickListener(v)}"
                                        android:text="@string/cancel"
                                        android:textAllCaps="false"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="@dimen/button_text_size" />

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</layout>