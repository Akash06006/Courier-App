<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.courierdriver.viewmodels.HelpScreenViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:backgroundTint="@color/colorPrimary"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbarCommon"
            layout="@layout/common_toolbar_back" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/ic_top_circle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_how_to_complete_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_15"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_small_arrow_right"
                    android:text="@string/how_to_complete_your_first_order"
                    android:onClick="@{(v) -> viewModel.clickListener(v)}"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    app:font="@{`regular`}" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@color/colorGreyLight" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_small_arrow_right"
                    android:onClick="@{(v) -> viewModel.clickListener(v)}"
                    android:text="@string/how_to_pay_commission"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    app:font="@{`regular`}" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@color/colorGreyLight" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_small_arrow_right"
                    android:onClick="@{(v) -> viewModel.clickListener(v)}"
                    android:text="Order with COD"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    app:font="@{`regular`}" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@color/colorGreyLight" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_small_arrow_right"
                    android:onClick="@{(v) -> viewModel.clickListener(v)}"
                    android:text="@string/order_with_buy_for_me"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    app:font="@{`regular`}" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@color/colorGreyLight" />

                <TextView
                    android:id="@+id/tv_payments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_15"
                    android:onClick="@{(v) -> viewModel.clickListener(v)}"
                    android:layout_marginRight="@dimen/dp_15"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_small_arrow_right"
                    android:text="@string/payment_transactions"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    app:font="@{`regular`}" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@color/colorGreyLight" />

                <TextView
                    android:id="@+id/tv_spot_and_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_small_arrow_right"
                    android:onClick="@{(v) -> viewModel.clickListener(v)}"
                    android:text="@string/spot_and_error"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    app:font="@{`regular`}" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@color/colorGreyLight" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_small_arrow_right"
                    android:text="@string/about"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    app:font="@{`regular`}" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@color/colorGreyLight" />

                <TextView
                    android:id="@+id/tv_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_small_arrow_right"
                    android:onClick="@{(v) -> viewModel.clickListener(v)}"
                    android:text="@string/logout"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    app:font="@{`regular`}" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@color/colorGreyLight" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</layout>