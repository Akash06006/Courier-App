<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.android.courier.common.BindingUtils" />

    </data>

    <RelativeLayout
            android:id="@+id/topLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/shape_round_corner"
            android:padding="5dp">
        <!---->

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/txtOrderNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/txtOrderStatus"
                    android:gravity="left"
                    android:padding="10dp"
                    android:text="Order No #120"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:font="@{`bold`}" />

            <TextView
                    android:id="@+id/txtDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/txtOrderStatus"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:text="Order No #120 has been confirmed"
                    android:textSize="13sp"
                    app:font="@{`regular`}" />

            <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/txtOrderStatus"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="12-10-2020 17:30"
                    android:textSize="11sp"
                    app:font="@{`regular`}" />

        </LinearLayout>

    </RelativeLayout>

</layout>
